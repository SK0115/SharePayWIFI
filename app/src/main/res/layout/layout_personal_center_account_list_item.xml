<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="106dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <ImageView
            android:id="@+id/iv_personal_center_account_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_account_img" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iv_personal_center_account_img">

            <TextView
                android:id="@+id/tv_personal_center_account_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_login"
                android:textColor="@color/black_80"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_personal_center_my_intergration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_personal_center_account_num"
                android:layout_marginTop="15dp"
                android:text="@string/my_intergration"
                android:textColor="@color/black_60"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_personal_center_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_personal_center_account_num"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/tv_personal_center_my_intergration"
                android:textColor="@color/color_account_point"
                android:textSize="19sp" />

        </RelativeLayout>


    </RelativeLayout>

    <View
        style="@style/MainLineStyle"
        android:layout_alignParentBottom="true" />

</RelativeLayout>